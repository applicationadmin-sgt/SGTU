# SGT Live Class System - Production Configuration
# Scalable Backend for 10,000+ Concurrent Users

# Server Configuration
NODE_ENV=production
HOST=192.168.7.20
PORT=5000
USE_HTTPS=false

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sgt-lms

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production

# Redis Configuration (for scaling)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Mediasoup SFU Configuration
MEDIASOUP_MIN_PORT=10000
MEDIASOUP_MAX_PORT=10100
MEDIASOUP_LISTEN_IP=192.168.7.20
MEDIASOUP_ANNOUNCED_IP=192.168.7.20

# Cluster Configuration
CLUSTER_WORKERS=4

# CORS Configuration
FRONTEND_URL=https://192.168.7.20:3000

# Upload Configuration
MAX_FILE_SIZE=10485760

# Email Configuration (if needed)
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Debug Configuration
DEBUG_LEVEL=info